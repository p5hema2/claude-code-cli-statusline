{
  "name": "@p5hema2/claude-code-cli-statusline",
  "version": "1.1.3",
  "description": "A customizable statusline for Claude Code CLI with OAuth usage metrics",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-code-cli-statusline": "dist/index.js"
  },
  "files": [
    "dist/",
    "scripts/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && npm run build:gui && npm run build:css",
    "build:production": "NODE_ENV=production tsc && npm run build:gui && npm run build:css:minify",
    "build:gui": "node scripts/copy-gui.js",
    "build:css": "postcss src/configure/gui/styles/tailwind.css -o dist/configure/gui/styles/output.css",
    "build:css:minify": "NODE_ENV=production postcss src/configure/gui/styles/tailwind.css -o dist/configure/gui/styles/output.css",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "dev:css": "postcss src/configure/gui/styles/tailwind.css -o src/configure/gui/styles/output.css --watch",
    "configure": "tsx src/index.ts --configure",
    "dev:configure": "concurrently --raw \"npm run dev:css\" \"tsx watch src/index.ts --configure --no-open\"",
    "test": "npm run test:vitest && npm run test:e2e",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:report": "playwright show-report",
    "lint": "npm run lint:eslint && npm run lint:sheriff",
    "lint:eslint": "eslint src/",
    "lint:sheriff": "sheriff verify",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:patch": "release-it patch"
  },
  "keywords": [
    "claude",
    "claude-code",
    "statusline",
    "terminal",
    "cli",
    "oauth",
    "usage-limits"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p5hema2/claude-code-cli-statusline.git"
  },
  "bugs": {
    "url": "https://github.com/p5hema2/claude-code-cli-statusline/issues"
  },
  "homepage": "https://github.com/p5hema2/claude-code-cli-statusline#readme",
  "author": "Martin He√ü",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "tagName": "v${version}",
      "requireBranch": "master",
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "push": true,
      "pushTags": true
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": false
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    },
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test"
      ]
    }
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@release-it/conventional-changelog": "^10.0.5",
    "@softarc/eslint-plugin-sheriff": "^0.19.6",
    "@softarc/sheriff-core": "^0.19.6",
    "@types/node": "^22.10.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "cssnano": "^7.1.2",
    "eslint": "^9.18.0",
    "eslint-plugin-import": "^2.32.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "release-it": "^19.2.4",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
