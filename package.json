{
  "name": "@p5hema2/claude-code-cli-statusline",
  "version": "0.2.0",
  "description": "A customizable statusline for Claude Code CLI with OAuth usage metrics",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-code-cli-statusline": "dist/index.js"
  },
  "files": [
    "dist/",
    "scripts/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && npm run build:gui && npm run build:css",
    "build:production": "NODE_ENV=production tsc && npm run build:gui && npm run build:css:minify",
    "build:gui": "node scripts/copy-gui.js",
    "build:css": "postcss src/configure/gui/styles/tailwind.css -o dist/configure/gui/styles/output.css",
    "build:css:minify": "NODE_ENV=production postcss src/configure/gui/styles/tailwind.css -o dist/configure/gui/styles/output.css",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "dev:css": "postcss src/configure/gui/styles/tailwind.css -o src/configure/gui/styles/output.css --watch",
    "configure": "tsx src/index.ts --configure",
    "dev:configure": "concurrently \"npm run dev:css\" \"tsx watch src/index.ts --configure --no-open\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm test && npm run test:e2e",
    "lint": "eslint src/",
    "lint:sheriff": "sheriff verify",
    "lint:all": "npm run lint && npm run lint:sheriff",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "statusline",
    "terminal",
    "cli",
    "oauth",
    "usage-limits"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p5hema2/claude-code-cli-statusline.git"
  },
  "bugs": {
    "url": "https://github.com/p5hema2/claude-code-cli-statusline/issues"
  },
  "homepage": "https://github.com/p5hema2/claude-code-cli-statusline#readme",
  "author": "Martin He√ü",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@softarc/eslint-plugin-sheriff": "^0.19.6",
    "@softarc/sheriff-core": "^0.19.6",
    "@types/node": "^22.10.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "cssnano": "^7.1.2",
    "eslint": "^9.18.0",
    "eslint-plugin-import": "^2.32.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
